Algoritmo "teste_condicional"

Var
   hora : inteiro


Inicio
      escreval("digite um horário: ")
      leia(hora)
      se hora < 12 entao
      escreval("Bom dia!")
      senao
           se hora <= 18 entao
              escreval("Boa Tarde!")
           senao
              escreval("Boa Noite!")
           fimse
      fimse
      


Fimalgoritmo